{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "controllers/**/*.ts",
      "models/**/*.ts",
      "routes/**/*.ts",
      "services/**/*.ts",
      "server.ts",
      "types.d.ts"
    ],
    "exclude": ["node_modules"]
  }
  